pipeline {
    agent { label 'master'}
    options{
        timestamps()
           }     
    stages {
        stage('Git Checkout') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Build frontend'){
            options {
                timeout(time: 1, unit: "HOURS")
            }
            steps {
                echo "Building"
                 sshagent(['Test123']) {
                    sh """
                    echo '${DEPLOYMENT}'
                    echo '#!/bin/bash  
                          hostname
            cd /home/ubuntu/docker/${DEPLOYMENT}/code
            git pull origin master
            cd /home/ubuntu/docker/
            ls -l
            docker-compose build --no-cache --force-rm ${DEPLOYMENT}
            docker-compose up -d --force-recreate --no-deps ${DEPLOYMENT}
            docker ps -a
            ' > script.sh
            cat script.sh
            ssh -o 'StrictHostKeyChecking no' -t ubuntu@52.60.236.156 'bash -s -- uno' < script.sh
                        """
                 }
            }
        }
        stage('Test'){
            steps{
                echo "Testing123"   
            }
    }
}
 post { 
        always { 
            
        }
    }
}
