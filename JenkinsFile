pipeline {
    agent { label 'master'}
    options{
        timestamps()
           }
     environment {
    PATH = "C:\\Program Files\\Git\\usr\\bin;C:\\Program Files\\Git\\bin;${env.PATH}"
    }
    stages {
        stage('Git Checkout') {
            steps {
                echo 'Hello World'
            }
        }

        stage('Build'){
            options {
                timeout(time: 1, unit: "HOURS")
            }
            steps {
                echo "Building"
                withCredentials([string(credentialsId: 'Test123', variable: 'SSH_PASSPHRASE')]) {
                sh """
                       echo 'echo \$SSH_PASSPHRASE' > ~/.ssh/tmp && chmod 700 ~/.ssh/tmp
                       ls -l
                        //scp -o 'StrictHostKeyChecking no' -r deploy ubuntu@52.60.236.156:/tmp
            ssh -o 'StrictHostKeyChecking no' -t ubuntu@52.60.236.156
                    """
                    }
                //sleep 5
            }
        }

        stage('Test'){
            steps{
                echo "Testing123"   
            }
    }
}
 post { 
        always { 
            cleanWs()
        }
    }
}
