pipeline {
    agent { label 'master'}
    options{
        timestamps()
           }
     environment {
    PATH = "C:\\Program Files\\Git\\usr\\bin;C:\\Program Files\\Git\\bin;${env.PATH}"
    }
    stages {
        stage('Git Checkout') {
            steps {
                echo 'Hello World'
            }
        }

        stage('Build'){
            options {
                timeout(time: 1, unit: "HOURS")
            }
            steps {
                echo "Building"
                 sshagent(['Test123']) {
                    sh """
            ssh -o 'StrictHostKeyChecking no' -t -t ubuntu@52.60.236.156
            cd /home/ubuntu/docker/frontend/code
            git pull origin master
            chmod -R 777 /home/ubuntu/docker/frontend/code
            chown -R www-data:www-data /home/ubuntu/docker/frontend/code
            cd /home/ubuntu/docker/
            
            ls -l
            """
                 }
                //sleep 5
            }
        }

        stage('Test'){
            steps{
                echo "Testing123"   
            }
    }
}
 post { 
        always { 
            cleanWs()
        }
    }
}
