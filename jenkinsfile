pipeline {
    agent { label 'master'}
    options{
        timestamps()
           }
    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }

        stage('Build'){
            options {
                timeout(time: 1, unit: "SECONDS")
            }
            steps {
                echo "Building"
                withCredentials([sshUserPrivateKey(credentialsId: 'Test123', keyFileVariable: KEY')]) {
                    sh 'ssh -i ${KEY} ubuntu@52.60.236.156'
                }
                //sleep 5
            }
        }

        stage('Test'){
            steps{
                echo "Testing123"
                sh "git clone https://github.com/venkatkagga/test16.git"
            sh "ls"
            echo "checkout complete"
            sh "chmod 400 stagelync.pem"
            sh "ssh -i stagelync.pem ubuntu@52.60.236.156"
            sh "whoami"   
            }
    }
}
 post { 
        always { 
            cleanWs()
        }
    }
}
